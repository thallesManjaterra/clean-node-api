{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Construindo API REST em NodeJS utilizando TDD, Clean Architecture e Design Patterns",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --noStackTrace",
    "test:unit": "npm test -- -c jest-unit-config.js --watch",
    "test:integration": "npm test -- -c jest-integration-config.js --watch",
    "test:staged": "npm test -- --bail --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thallesManjaterra/clean-node-api.git"
  },
  "keywords": [],
  "author": "Thalles Manjaterra <thalles.manjaterra@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thallesManjaterra/clean-node-api/issues"
  },
  "homepage": "https://github.com/thallesManjaterra/clean-node-api#readme",
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.1.0",
    "husky": "^4.3.8",
    "jest": "^27.2.2",
    "lint-staged": "^9.5.0",
    "standard": "^16.0.3",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.2",
    "validator": "^13.6.0"
  }
}
